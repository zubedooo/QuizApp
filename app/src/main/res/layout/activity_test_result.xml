<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestResult"
    android:background="#63C">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marks obtained"
        android:textSize="20sp"
        android:layout_above="@+id/marks_obtained"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:textColor="#FFFFFFFF"/>

    <TextView
        android:id="@+id/marks_obtained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15/15"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:layout_centerInParent="true"
        android:paddingBottom="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return home"
        android:textAllCaps="false"
        android:paddingHorizontal="20dp"
        android:textColor="#63C0AE"
        android:minHeight="40sp"
        android:background="@drawable/custom_button_one"
        android:layout_below="@+id/marks_obtained"
        android:layout_centerHorizontal="true"
        android:onClick="goHome"/>

</RelativeLayout>